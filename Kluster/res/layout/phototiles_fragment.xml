<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Phototiles_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Thumbnail_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail_description"
            android:src="@drawable/sample_b" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" 
            android:clickable="true"
            android:id="@+id/clickable_thumbnail">

            <ImageView
                android:id="@+id/Thumbnail_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/thumbnail_description"
                android:src="@drawable/sample_a" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                

            <TextView
                android:id="@+id/Thumbnail_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold" />
            
            <ImageView
                
                android:id="@+id/Thumbnail_Icon"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/Thumbnail_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            </RelativeLayout>
            
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/Thumbnail_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail_description"
            android:src="@drawable/sample_g" />

        <ImageView
            android:id="@+id/Thumbnail_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
            android:contentDescription="@string/thumbnail_description"
            android:src="@drawable/sample_f" />

        <ImageView
            android:id="@+id/Thumbnail_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/thumbnail_description"
            android:src="@drawable/sample_d" />
    </LinearLayout>
	
</LinearLayout>