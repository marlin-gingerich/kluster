<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/infowindow"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imgPreview"
        android:contentDescription="@string/image_preview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />
    
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/image_preview"
        android:background="@drawable/backrepeat" />
    
    <TextView
        android:id="@+id/infowindow_txtTitle"
        android:text="Event Name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textIsSelectable="false"
        android:textSize="@dimen/title_text"
        android:textColor="#FFFFFF"
        android:lines="2"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10" />

        <TextView
        android:id="@+id/infowindow_txtDesc"
        android:text="Sun Feb 20 2014 12:00PM"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/infowindow_txtTitle"
        android:textIsSelectable="false"
        android:textSize="@dimen/desc_text"
        android:maxLines="4"
        android:ellipsize="end"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />
        
</RelativeLayout>
