<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  
   
    <android.app.ScaleImageView
        android:id="@+id/photoview_imgMain"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true" />
    
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="50dp"       
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backrepeat">
	           
		<TextView
		    android:id="@+id/photoview_txtUser"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentBottom="true"
		    android:layout_toLeftOf="@+id/photoview_imgUp"
		    android:text="No Name"
		    android:gravity="left|center_vertical" />
		
			<ImageView
	        android:id="@+id/photoview_imgUp"    
	        android:layout_width="40dp"
	        android:layout_height="40dp"    
	        android:layout_alignParentBottom="true"
	        android:layout_toLeftOf="@+id/photoview_txtUp"
	        android:layout_marginRight="6dip"   
	        android:src="@drawable/thumbup" />
	
	    <TextView  
	        android:id="@+id/photoview_txtUp"
	        android:layout_width="40dp"
	        android:layout_height="40dp"       
	        android:layout_toLeftOf="@+id/photoview_imgDown"
	        android:layout_alignParentBottom="true"     
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:text="100"
	        android:gravity="left|center_vertical" />
		
		<ImageView
	        android:id="@+id/photoview_imgDown"    
	        android:layout_width="40dp"
	        android:layout_height="40dp"    
	        android:layout_alignParentBottom="true"
	        android:layout_toLeftOf="@+id/photoview_txtDown"
	        android:layout_marginRight="6dip"   
	        android:src="@drawable/thumbdown" />
	    
	    <TextView  
	        android:id="@+id/photoview_txtDown"
	        android:layout_width="40dp"
	        android:layout_height="40dp"       
	        android:layout_alignParentRight="true"
	        android:layout_alignParentBottom="true"       
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:text="200"
	        android:gravity="left|center_vertical" /> 
	</RelativeLayout>

</RelativeLayout>
